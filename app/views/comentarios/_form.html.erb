  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= form.label :correo, "Correo electronico" %>
    <%= form.text_field :correo, id: :comentario_correo, :class => 'form-control', :placeholder => "Correo electronico" %>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= form.label :comentario, "Comentario" %>
    <%= form.text_area :comentario, id: :comentario_comentario,  :class => 'form-control', :rows => "10", :cols => "30"  %>
  </div>
</div>

  <div class="actions">
    <%= form.submit "Comentar", :class => "btn btn-primary", data: { confirm: '¿Realizará un comentario, desea continuar?' } %>
