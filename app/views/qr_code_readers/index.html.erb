<p id="notice"><%= notice %></p>

<h1>Registro de Descuentos</h1>

<table>
  <thead>
    <tr>
      <th>Descuento</th>
      <th>Persona</th>
      <th>Acceso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @qr_code_readers.each do |qr_code_reader| %>
      <tr>
        <td><%= qr_code_reader.disscount %></td>
        <td><%= qr_code_reader.person %></td>
        <td><%= qr_code_reader.checkin %></td>
        <td><%= link_to 'Mostrar', qr_code_reader %></td>
        <td><%= link_to 'Editar', edit_qr_code_reader_path(qr_code_reader) %></td>
        <td><%= link_to 'Eliminar', qr_code_reader, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear nuevo Registro', new_qr_code_reader_path %>
