<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, "Nombre del evento" %>
    <%= form.text_field :title, id: :event_title, :class => 'form-control', :placeholder => "Nombre del evento" %>
  </div>

  <div class="field">
    <%= form.label :start, "Fecha de inicio" %>
    <%= form.date_select :start, id: :event_start %>
  </div>

  <div class="field">
    <%= form.label :end, "Fecha de termino" %>
    <%= form.date_select :end, id: :event_end %>
  </div>

  <div class="actions">
    <%= form.submit "Guardar", :class => "btn btn-primary"%>
  </div>
<% end %>
